<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<!------ Include the above in your HEAD tag ---------->

<body onload="loadBody()" onresize="doiSize()" 
    onkeyup="esc_close(window.event,accept_and_cls)" data-layuserdata = "<%= JSON.stringify(userListData) %>">
    <div id="throbber" style="display:none; min-height:120px;"></div>
    <div id="noty-holder"></div>
    <% include ../admin %>
    <div id="wrapper-0" style="padding: 0;">
        <p id="do-dai"></p>
        <div style="text-align: center;font-size: 20px;">
            <caption><strong>Users Data Table</strong></caption>
        </div>
        <!-- ************************* -->
        <!-- Cửa sổ hiển thị Data -->
        <!-- ************************* -->
        <div id="id-search">
            <input type="text" placeholder="Searching" oninput="search()">
        </div>
        <div id="table-user">
            <table>
                <thead>
                    <tr>
                        <th>User Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Smart Home Id</th>
                        <th>Smart Home Name</th>
                        <th>Active</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <button id="newUser"><i class="fas fa-plus" ></i> New User</button>
        <div id="id-0" style="display:inline-block">
            <button onclick="createTb()">click to create table</button>
        </div>
        <!-- ************************* -->
        <!-- Cửa sổ bật lên -->
        <!-- ************************* -->
        <div id="fix-block" style="display: none;">
            <div id="fix-block-content">
                <div id="fix-block-ok" onclick="accept_and_cls()">
                        OK
                </div>
                <div id="info-user">
                    <label for="luaChon">Choose Smart Home</label>
                    <select name="" id="luaChon" style="width:10%">
                    </select> 
                    <div id="check-active">
                        <input type="checkbox" id="actived">
                        <label for="actived">Active</label>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /#wrapper -->
</body>
<% include ../partials/script %>

</html>
